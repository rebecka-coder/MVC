@model projectMVC.Models.BookingModel
@{
    ViewData["Title"] = "Boka tid";
}width

<div class="bookContainer">

    <h2>Boka tid: </h2><br />

    <form method="post">

        <div class="form-group">
            <label asp-for="Treatment">1. Välj behandling:</label>
            <select asp-for="Treatment" class="form-control" id="Treatment">
                <option value="klippning">Klippning</option>
                <option value="Avancerad klippning">Avancerad klippning (stor förändring eller mycket hår)</option>
                <option value="Maskinklippning">Maskinklippning (endast sidorna)</option>
                <option value="Barnklipp 0-4 år">Barnklipp 0-4 år</option>
                <option value="Barnklipp 5-10 år">Barnklipp 5-10 år</option>
                <option value="Lugg">Lugg</option>
                <option value="Tvätt & fön/styling">Tvätt & fön/Styling</option>
                <option value="Uppsättning">Uppsättning</option>
                <option value="Bruduppsättning">Bruduppsättning</option>
                <option value="Permanent inkl klipp">Permanent inkl. klipp</option>
                <option value="Inpackning">Inpackning i samband med behandling med extra massage</option>
            </select>
            <br />
        </div>

        <div class="form-group">
            <label asp-for="Datepicker">2. Välj datum:</label>
            <input asp-for="Datepicker" id="datepicker"/>
            <span asp-validation-for="Datepicker" class="error"></span>
            <br />
        </div>

        <div class="form-group">
            <div asp-validation-summary="ModelOnly"></div>
            <label>3. Fyll i dina uppgifter: </label><br />
            <label asp-for="Namn"></label>
            <input asp-for="Namn" class="form-control" id="Namn" />
            <span asp-validation-for="Namn" class="error"></span>
            <br />

            <label asp-for="Adress"></label>
            <input asp-for="Adress" class="form-control" id="Adress" />
            <span asp-validation-for="Adress" class="error"></span>
            <br />

            <label asp-for="Postnummer"></label>
            <input asp-for="Postnummer" class="form-control" id="Postnummer" />
            <span asp-validation-for="Postnummer" class="error"></span>
            <br />
            <label asp-for="Stad"></label>
            <input asp-for="Stad" class="form-control" id="Stad" />
            <span asp-validation-for="Stad" class="error"></span>
            <br />

            <label asp-for="Telefonnummer"></label>
            <input asp-for="Telefonnummer" class="form-control" id="Telefonnummer" />
            <span asp-validation-for="Telefonnummer" class="error"></span>
            <br />

            <label asp-for="Epost"></label>
            <input asp-for="Epost" class="form-control" id="Epost" />
            <span asp-validation-for="Epost" class="error"></span>
            <br />

            <div class="form-check">
                <div asp-validation-summary="ModelOnly"></div>
                <label asp-for="ConfirmationEmail" class="form-check-label">
                    <input asp-for="ConfirmationEmail" class="form-check-input" id="ConfirmationEmail" value="true">Ja tack, skicka bokningsbekräftelse via e-post.
                </label>
                <br />
            </div>

            <div class="form-check">
                <div asp-validation-summary="ModelOnly"></div>
                <label asp-for="SmsReminder" class="form-check-label">
                    <input asp-for="SmsReminder" class="form-check-input" id="SmsReminder" value="true">Skicka påminnelse via sms dagen före behandling.
                </label><br />
            </div>

            <div class="button">
                <input type="submit" value="Boka" class="btn btn-light btn-lg" />
            </div>

        </div><!--Slut på form-group-->
        </form>


</div><!--Slut på bookContainer-->

<footer>@ViewBag.text</footer>